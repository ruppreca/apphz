{

  "OidcConfiguration": {
    "Authority": "https://ruppreca.selfhost.co",
    "ClientId": "arheizungapp.client",
    "DefaultScopes": [ //add here all scopes used in your policies !!
      "openid",
      "profile",
      "email",
      "userlevel",
      "country",
      "arheizungapi"
    ],
    //Redirect to the Client App
    "RedirectUri": "https://ruppreca.github.io/wasmhz/authentication/login-callback",
    "PostLogoutRedirectUri": "https://ruppreca.github.io/wasmhz/authentication/logout-callback",
    "ResponseType": "code"

  },
  "UserOptions": {
    "NameClaim": "email"
  },
  "AppSettings": {
    "ApiClientUri": "https://ruppreca.selfhost.co/",
    "addBaseUri": "/wasmhz/",
  }
}